{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Dev",
			"dependsOn": ["npm: watch", "npm: watchExamples"],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "npm",
			"script": "watch",
			"label": "npm: watch",
			"detail": "start watching main",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "npm",
			"script": "watchExamples",
			"label": "npm: watchExamples",
			"detail": "start watch examples",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "Build graphRenderer -dev",
			"dependsOn": ["compileWasm -debug", "Wasm -> dist"],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Build graphRenderer -release",
			"dependsOn": ["compileWasm -release", "Wasm -> dist"],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"type": "npm",
			"script": "compileWasmDev",
			"label": "compileWasm -debug",
			"detail": "compile rust to wasm -debug",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "npm",
			"script": "compileWasm",
			"label": "compileWasm -release",
			"detail": "compile rust to wasm -release",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "shell",
			"windows": {
				"command": "xcopy src\\graph-renderer\\pkg dist\\graph-renderer\\pkg /s /e /h /I /y"
			},
			"linux": {
				"command": "cp -rf src/graph-renderer/pkg dist/graph-renderer/pkg"
			},
			"osx": {
				"command": "cp -rf src/graph-renderer/pkg dist/graph-renderer/pkg"
			},
			"label": "Wasm -> dist",
			"detail": "Move wasm files to dist folder",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "npm",
			"script": "lint",
			"label": "biome: check",
			"detail": "check biome",
			"group": {
				"kind": "test",
				"isDefault": false
			}
		},
		{
			"type": "npm",
			"script": "biomeFix",
			"label": "biome: fix",
			"detail": "fix with biome",
			"group": {
				"kind": "test",
				"isDefault": false
			}
		}
	]
}
